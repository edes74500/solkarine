{
  "extends": "./base.json",
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",

    "lib": ["es2017"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "emitDecoratorMetadata": false,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@repo/*": ["../../packages/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
