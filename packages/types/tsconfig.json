{
  "extends": ["@repo/typescript-config/nodejs.json"],
  "compilerOptions": {
    "outDir": "dist", // Répertoire de sortie
    "rootDir": "src", // Répertoire source
    // "strict": true,
    // "esModuleInterop": true,
    // "skipLibCheck": true,
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Bundler",
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@repo/types": ["./src"],
      "@repo/*": ["../../packages/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
