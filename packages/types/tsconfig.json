{
  "extends": ["@repo/typescript-config/nodejs.json"],
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Bundler",
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@repo/types": ["./src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
